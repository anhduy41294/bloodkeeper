<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCDCDC">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>
    <TableLayout
        android:id="@+id/tblformGiaoDich"
        android:layout_marginTop="8dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="16dp"
        android:stretchColumns="2"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="8dp"
            >
            <ImageView
                android:id="@+id/imgTenVayNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_name"
                />
            <EditText
                android:id="@+id/edtTenVayNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Tên Giao dịch"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="8dp">
            <ImageView
                android:id="@+id/imgSoTienCanTra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_hutien"
                />
            <EditText
                android:id="@+id/edtSoTienCanTra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Cần trả"
                android:textColor="@color/colorAccent"
                android:inputType="numberDecimal"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="8dp">
            <ImageView
                android:id="@+id/imgSoTienDaTra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_money"
                />
            <EditText
                android:id="@+id/edtSoTienDaTra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Đã trả"
                android:textColor="@color/colorAccent"
                android:inputType="numberDecimal"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="8dp">
            <ImageView
                android:id="@+id/imgGhiChu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_thongke"
                />
            <EditText
                android:id="@+id/edtGhiChu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Ghi chú"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="8dp">
            <ImageView
                android:id="@+id/imgNgayHetHan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_calendar"
                />
            <EditText
                android:id="@+id/edtNgayHetHan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="date"
                android:hint="Ngày Hết Hạn"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="8dp">
            <ImageView
                android:id="@+id/imgLoaiVayNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_action"
                />
            <RadioGroup
                android:id="@+id/rdLoaiVayNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rdChoVay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cho Vay"/>
                <RadioButton
                    android:id="@+id/rdMuonNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mượn Nợ"/>
                </RadioGroup>
        </TableRow>
    </TableLayout>
</LinearLayout>
