<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_bg_hutien"
    android:clickable="true"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!--<ImageView
            android:id="@+id/khsk_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp" />-->
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/khsk_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:paddingRight="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_hutien"
            app:border_width="1dp"
            app:border_color="@color/colorAccent"/>

        <TextView
            android:id="@+id/khsk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/khsk_icon"
            android:textColor="@color/colorPrimaryText"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/apdung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/khsk_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:id="@+id/khsk_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/khsk_name"
            android:layout_toRightOf="@+id/khsk_icon" />
        <TextView
            android:id="@+id/dachi"
            android:text="Đã chi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/khsk_infor"
            android:layout_toRightOf="@+id/khsk_icon"
            android:textColor="@color/colorMoneySub"
            />
        <TextView
            android:id="@+id/tienchi_khsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dachi"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorMoneySub" />
        <TextView
            android:id="@+id/dathu"
            android:text="Đã thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dachi"
            android:layout_toRightOf="@+id/khsk_icon"
            android:textColor="@color/colorMoneyAdd"
            />
        <TextView
            android:id="@+id/tienthu_khsk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dathu"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorMoneyAdd"
            />

    </RelativeLayout>

</LinearLayout>