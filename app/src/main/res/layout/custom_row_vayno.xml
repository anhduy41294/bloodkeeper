<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_bg_hutien"
    android:clickable="true"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!--<ImageView
            android:id="@+id/vayno_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp" />-->
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/vayno_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:paddingRight="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_hutien"
            app:border_width="1dp"
            app:border_color="@color/colorAccent"/>

        <TextView
            android:id="@+id/vayno_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/vayno_icon"
            android:textColor="@color/colorPrimaryText"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/ngayketthuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/vayno_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:id="@+id/vayno_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vayno_name"
            android:layout_toRightOf="@+id/vayno_icon" />
        <TextView
            android:id="@+id/hienco"
            android:text="Đã Trả"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vayno_infor"
            android:layout_toRightOf="@+id/vayno_icon"
            android:textColor="@color/colorMoneyCurrent"
            />
        <TextView
            android:id="@+id/tienhienco_vayno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hienco"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorMoneyCurrent" />
        <TextView
            android:id="@+id/muctieu"
            android:text="Cần Trả"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hienco"
            android:layout_toRightOf="@+id/vayno_icon"
            android:textColor="@color/colorMoneyGoal"
            />
        <TextView
            android:id="@+id/tienmuctieu_vayno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/muctieu"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorMoneyGoal"
            />

    </RelativeLayout>

</LinearLayout>