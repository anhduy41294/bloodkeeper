<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutThemGiaoDich"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCDCDC">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>
        <TableLayout
            android:id="@+id/tblformGiaoDich"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="16dp"
            android:stretchColumns="2"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingTop="8dp"
                >
                <ImageView
                    android:id="@+id/imgTenGiaoDich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_name"
                    />
                <EditText
                    android:id="@+id/edtTenGiaoDich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Tên Giao dịch"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingTop="8dp">
                <ImageView
                    android:id="@+id/imgSoTien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_money"
                    />
                <EditText
                    android:id="@+id/edtSoTien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="(x 1000đ)"
                    android:textColor="@color/colorAccent"
                    android:inputType="numberDecimal"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingTop="8dp"
                >
                <ImageView
                    android:id="@+id/imgMucDichChi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_name"
                    />
                <EditText
                    android:id="@+id/edtMucDichChi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Mục đích chi"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingTop="8dp">
                <ImageView
                    android:id="@+id/imgGhiChu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_name"
                    />
                <EditText
                    android:id="@+id/edtGhiChu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Ghi chú"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingTop="8dp">
                <ImageView
                    android:id="@+id/imgNgayGiaoDich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_calendar"
                    />
                <EditText
                    android:id="@+id/edtNgayGiaoDich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:inputType="date"
                    android:hint="Ngày Giao Dịch"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tblformGiaoDichExtend"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="16dp"
            android:stretchColumns="2"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingTop="8dp"
                >
                <ImageView
                    android:id="@+id/imgKeHoach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_kehoach"
                    />
                <EditText
                    android:id="@+id/edtKeHoach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Kế hoạch"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingTop="8dp"
                >
                <ImageView
                    android:id="@+id/imgLapLai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_kehoach"
                    />
                <RadioButton
                    android:id="@+id/rdbLapLai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Lặp Lại"/>
            </TableRow>
        </TableLayout>

</LinearLayout>
